#
# Usage:
#	Cmd_Echo(<LEVEL_NAME> [<CONTENTS>])
#
IF(NOT DEFINED ECHO_LEVEL)
	SET(ECHO_LEVEL 1)
	PARAM_ARRAY_APPEND(ECHO_LEVEL "Error")
	PARAM_ARRAY_APPEND(ECHO_LEVEL "Print")
	PARAM_ARRAY_APPEND(ECHO_LEVEL "Debug")
ENDIF()

FUNCTION(CMD_ECHO)
	IF(${ARGC} GREATER 0)
		SET(PREFIX)
		PARAM_ARRAY_CASEFOUND(ECHO_LEVEL ${ARGV0} LEVEL_VALUE)
		IF(NOT ${ECHO_LEVEL} LESS ${LEVEL_VALUE})
			IF(${LEVEL_VALUE} EQUAL -1)
				LIST(APPEND PREFIX STATUS "[${ECHO_LEVEL-${ECHO_LEVEL}}]")
			ELSEIF(${LEVEL_VALUE} EQUAL 0)
				LIST(REMOVE_AT ARGN 0)
				LIST(APPEND PREFIX FATAL_ERROR "[${ECHO_LEVEL-${LEVEL_VALUE}}]")
			ELSE()
				LIST(REMOVE_AT ARGN 0)
				LIST(APPEND PREFIX STATUS "[${ECHO_LEVEL-${LEVEL_VALUE}}]")
			ENDIF()
		ENDIF()
		SET(CONTENTS)
		FOREACH(CONTENT ${ARGN})
			SET(CONTENTS "${CONTENTS} ${CONTENT}")
		ENDFOREACH()
		MESSAGE(${PREFIX}${CONTENTS})
	ENDIF()
ENDFUNCTION()
